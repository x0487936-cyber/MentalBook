<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Creative Gradient Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/gradient_toolbar"
        android:elevation="8dp"
        app:title="ðŸ§  MentalBook"
        app:titleTextColor="@android:color/white"
        app:titleTextAppearance="@style/TextAppearance.VirtualXander.Headline2" />

    <!-- Sidebar Panel with Card Style -->
    <LinearLayout
        android:id="@+id/sidebar"
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:background="@color/surface"
        android:orientation="vertical"
        android:padding="12dp"
        android:elevation="6dp"
        android:outlineProvider="bounds">

        <!-- Stats Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Session Stats"
                    android:textAppearance="@style/TextAppearance.VirtualXander.Title" />

                <TextView
                    android:id="@+id/tvTurns"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Turns: 0"
                    android:textAppearance="@style/TextAppearance.VirtualXander.Body"
                    android:drawableStart="@drawable/ic_turns"
                    android:drawablePadding="8dp" />

                <TextView
                    android:id="@+id/tvMood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Mood: Neutral"
                    android:textAppearance="@style/TextAppearance.VirtualXander.Caption"
                    android:drawableStart="@drawable/ic_mood"
                    android:drawablePadding="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Topics Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardTopics"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¬ Active Topics"
                    android:textAppearance="@style/TextAppearance.VirtualXander.Title" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTopics"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Quick Actions -->
        <LinearLayout
            android:id="@+id/layoutQuickActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNewChat"
                style="@style/Widget.VirtualXander.Button.Outlined"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ†• New"
                android:textSize="12sp"
                app:icon="@drawable/ic_new_chat"
                app:iconSize="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnClear"
                style="@style/Widget.VirtualXander.Button.Outlined"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="ðŸ—‘ï¸ Clear"
                android:textSize="12sp"
                app:icon="@drawable/ic_clear"
                app:iconSize="16dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Chat Area -->
    <LinearLayout
        android:id="@+id/chatArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_toEndOf="@id/sidebar"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Messages with Card Style -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/surface">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMessages"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:clipToPadding="false" />

        </androidx.cardview.widget.CardView>

        <!-- Input Area with Rounded Style -->
        <LinearLayout
            android:id="@+id/inputArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilMessage"
                style="@style/Widget.VirtualXander.TextInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Type a message..."
                app:startIconDrawable="@drawable/ic_message"
                app:startIconTint="@color/primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="3"
                    android:textAppearance="@style/TextAppearance.VirtualXander.Body" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSend"
                style="@style/Widget.VirtualXander.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Send âž¤"
                app:icon="@drawable/ic_send"
                app:iconGravity="textStart" />

        </LinearLayout>

    </LinearLayout>

    <!-- Loading Overlay -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/loading_overlay"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="24dp"
            app:cardElevation="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="32dp">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/progressBar"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:indeterminate="true"
                    app:indicatorColor="@color/primary"
                    app:trackColor="@color/primary_light"
                    app:trackThickness="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="ðŸ’­ Thinking..."
                    android:textAppearance="@style/TextAppearance.VirtualXander.Title"
                    android:textColor="@color/primary" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </FrameLayout>

</RelativeLayout>

