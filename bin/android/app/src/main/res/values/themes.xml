<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Theme -->
    <style name="Theme.VirtualXander" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>
        
        <!-- Default Text Appearance -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>

    <!-- Heading Text Styles - Using sans-serif-medium for a creative feel -->
    <style name="TextAppearance.VirtualXander.Headline1" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="TextAppearance.VirtualXander.Headline2" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.VirtualXander.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.VirtualXander.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.VirtualXander.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <style name="TextAppearance.VirtualXander.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_hint</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.VirtualXander.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <!-- Message Text Styles -->
    <style name="TextAppearance.VirtualXander.Message.User" parent="TextAppearance.VirtualXander.Body">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextAppearance.VirtualXander.Message.Bot" parent="TextAppearance.VirtualXander.Body">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- Card Style -->
    <style name="Widget.VirtualXander.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.VirtualXander.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.VirtualXander.Button</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="Widget.VirtualXander.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/primary</item>
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="Widget.VirtualXander.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primary</item>
        <item name="rippleColor">@color/primary_light</item>
    </style>

    <!-- Input Field Style -->
    <style name="Widget.VirtualXander.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">24dp</item>
        <item name="boxCornerRadiusTopEnd">24dp</item>
        <item name="boxCornerRadiusBottomStart">24dp</item>
        <item name="boxCornerRadiusBottomEnd">24dp</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
    </style>

    <!-- Toolbar Style -->
    <style name="Widget.VirtualXander.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@drawable/gradient_toolbar</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="titleTextAppearance">@style/TextAppearance.VirtualXander.Headline2</item>
    </style>

    <!-- Chip Style for Topics -->
    <style name="Widget.VirtualXander.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="chipStrokeColor">@color/primary_light</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">16dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="chipMinHeight">32dp</item>
    </style>

    <!-- Splash Screen Style -->
    <style name="TextAppearance.VirtualXander.Splash.Title" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="TextAppearance.VirtualXander.Splash.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:alpha">0.9</item>
    </style>

    <style name="TextAppearance.VirtualXander.Splash.Version" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:alpha">0.6</item>
    </style>
</resources>

